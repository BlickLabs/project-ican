.cic
  &-container
    margin-top 185px

  &-intro
    display flex
    flex-direction row
    margin-bottom 103px

    &-img
      height 508px
      width 463px

      &-container
        height 508px
        margin-left 77px
        width 463px

    &-content
      padding-left 65px

    &-special
      &-title
        line-height 78px

        &-container
          max-width 465px

    &-title
      &-container
        left 40px
        top 48px

    &-decorator
      bottom -22px
      left 22px

    &-paragraph
      &-container
        padding 70px 0 0 45px
        max-width 535px

  &-functions
    background-color #f8f8f8
    padding 70px 0 0 60px
    position relative

    &-decorator
      background-color #839d65
      height 147px
      position absolute
      right 108px
      top -41px
      width 3px

    &-special
      &-title
        color #ececec
        font-size remify(106px)
        letter-spacing 0.5px

    &-title
      &-container
        left 88px
        top 76px

    &-subtitle
      color #4d4d4d
      font-size remify(19px)
      line-height 31px

    &-content
      padding 20px 0 0 90px

    &-ul
      list-style none
      max-width 495px
      padding 20px 0 0 0

    &-li
      color #4d4d4d
      font-size remify(16px)
      line-height 31px

      &-container
        position relative

        & li
          padding-bottom 30px

        & li:before
          background-color #839d65
          border-radius 100px
          content ""
          display block
          height 9px
          left -25px
          position absolute
          top 8px
          width 9px

    &-img
      height 188px
      width 276px

      &-container
        bottom -130px
        position absolute
        right 20px

      &-decorator
        height 449px
        width 391px

        &-container
          bottom 44px
          position absolute
          right 88px

      &-mobile
        &-container
          display none

  &-activities
    background-image url("../img/backgrounds/background-cic-activities.png")
    background-position left bottom
    background-repeat no-repeat
    background-size 100%
    display flex
    flex-direction row
    justify-content center
    margin-top 240px
    padding-bottom 110px

    &-title
      &-container
        margin-bottom 45px

    &-info
      color #4d4d4d
      font-size remify(14px)
      line-height 22px

      &-content
        display flex
        flex-direction row
        margin-bottom 20px
        max-width 325px
        padding-left 23px

    &-icon
      &-container
        display flex
        justify-content center
        margin-right 35px
        min-width 29px
        width 29px

      &-testtube
        height 32px
        width 14px

      &-atom
        height 33px
        width 29px

      &-microscope
        height 31px
        width 29px

      &-heart
        height 23px
        width 27px

      &-magnifyingglass
        height 24px
        width 25px

      &-book
        height 28px
        width 22px

      &-people
        height 21px
        width 27px

    &-separator
      background-color #979797
      height 356px
      margin 0 120px
      width 1px

  &-info
    display flex
    flex-direction row
    margin-top 95px

    &-img
      height 449px
      width 436px

      &-container
        height 449px
        padding-left 77px
        position relative
        z-index 1

      &-mobile
        &-container
          display none

      &-decorator
        height 188px
        width 215px

        &-container
          left 0
          bottom -44px
          position absolute
          z-index -1

    &-content
      margin-left 120px

    &-special
      &-title
        font-size remify(96px)

    &-title
      &-container
        left 43px
        top 67px

    &-decorator
      bottom -88px
      left 3px

    &-ul
      padding 120px 0 0 68px

  &-media
    align-items center
    background-color #f8f8f8
    display flex
    flex-direction column
    margin-top 90px
    padding 76px 0 56px 0

    &-info
      &-container
        display flex
        flex-direction row
        margin 60px 0 78px 0

    &-description
      color #4d4d4d
      font-size remify(15px)
      line-height 26px

      &-container
        align-items center
        display flex
        flex-direction column

    &-separator
      background-color #d6d6d6
      height 67px
      margin 0 45px
      width 1px

  &-whatsapp
    &-container
      display none

  &-phone
    display block

@media screen and (min-width 769px) and (max-width 1160px)
  .cic
    &-intro
      flex-direction column

    &-functions
      padding-bottom 420px

    &-activities
      margin 150px 30px 0 30px

      &-separator
        margin 0 30px

    &-info
      flex-direction column

    &-media
      &-separator
        margin 0 25px

@media screen and (max-width 768px)
  .cic
    &-container
      margin-top 120px

    &-intro
      align-items center
      flex-direction column
      margin 0 40px

      &-special
        &-title
          line-height 45px

      &-title
        &-container
          left 20px !important

      &-decorator
        bottom -40px
        left 0px !important

      &-content
        margin-top 30px
        padding-left 0

      &-paragraph
        &-container
          max-width initial
          padding 60px 0 0 21px

      &-img
        height 318px
        width 290px

        &-container
          height 318px
          margin-left 0
          width 290px

    &-functions
      margin-top 30px
      padding 30px

      &-decorator
        height 100px
        right 30px
        top -10px

      &-content
        padding-left 21px

      &-subtitle
        line-height 20px

      &-img
        height 136px
        width 200px

        &-container
          bottom 0
          display none
          height 136px
          margin-top 150px
          width 200px

        &-decorator
          height 246px
          width 215px

          &-container
            bottom 30px
            height 246px
            right 45px
            width 215px

        &-mobile
          width 100%

          &-container
            display block
            width 100%

      &-title
        &-container
          left 20px !important

      &-ul
        max-width initial

    &-activities
      align-items center
      flex-direction column
      margin 60px 30px 0 30px
      padding-bottom 40px

      &-title
        &-container
          text-align center

      &-separator
        height 1px
        margin 30px 0
        width 300px

      &-info
        &-content
          max-width 280px

      &-icon
        &-container
          margin-right 10px

    &-info
      flex-direction column

      &-img
        height 247px
        width 240px

        &-container
          display none
          height 247px
          padding-left 0
          width 240px

        &-mobile
          width 100%

          &-container
            display block
            padding 0 30px
            width 100%

        &-decorator
          height 119px
          width 175px

          &-container
            height 119px
            width 175px

      &-content
        margin 50px 30px 0 30px

      &-title
        &-container
          left 20px !important

      &-decorator
        left 0 !important
        bottom -57px

      &-ul
        padding 60px 0 0 45px

    &-media
      margin-top 0
      padding 50px 30px

      & h2
        text-align center

      &-info
        &-container
          align-items center
          flex-direction column
          margin 50px 0 40px 0

      &-separator
        height 1px
        margin 20px 0
        width 67px

    &-whatsapp
      &-container
        display block

      &-button.ican-base-btn
        padding 0 20px
        width auto

    &-phone
      display none
