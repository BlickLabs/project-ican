/*HAMBURGER*/

.hamburger-menu-container
  display none

@media screen and (max-width 876px)
  .hamburger-menu-container
    background-color $icanGreen
    display inline
    left 0
    padding-bottom 50px
    position fixed
    top 0
    width 0%
    z-index 13
    bottom 0
    overflow scroll
    -webkit-transition width 0.5s
    transition width 0.5s
    
  .hamburger-menu-header
    align-items center
    display flex
    flex-direction row
    justify-content space-between
    padding 22px 36px 50px 36px
    
  .hamburger-logo
    height 10px
    width auto
    
  .hamburger-close-container
    cursor pointer
    
  .hamburger-close
    height 16px
    width 16px
    
  .hamburger-link-container
    align-items center
    display flex
    flex-direction row
    margin-bottom 30px
    
  .hamburger-stroke-container
    height 1px
    width 23px
    margin-right 15px
    transition 0.3s height ease

  .hamburger-stroke
    height 1px
    width 50%
    background-color #fff
    transition 300ms width, color ease

  .hamburger-menu-link
    color #fff
    cursor pointer
    font-size remify(14px)
    letter-spacing 1.4px
    text-transform uppercase

    &.link-active
      font-family 'Metropolis'
      font-weight 600 !important
      font-style normal
      
    &:hover, &.link-active
      .hamburger-stroke
        width 100%
        background-color #fff
        
  .hamburger-text
    padding 10px 0
        
@media screen and (max-width 1117px)
  .site-navbar__menu-link
    font-size remify(11px)
