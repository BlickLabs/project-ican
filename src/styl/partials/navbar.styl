.site-navbar
  align-items center
  background-color white
  display flex
  height 79px
  justify-content space-between
  left 0
  padding 0 59px
  position fixed
  top 0
  transition top 0.3s
  right 0
  z-index 12
  box-shadow: 0 2px 17px 0 rgba(0, 0, 0, 0.11);

.nav-transparent-bg
  left 110px
  right 110px
  top 46px
  transition top 0.3s

.nav-white-bg
  background-color #fff
  box-shadow 0 2px 9px 0 rgba(0, 0, 0, 0.14)

.ican-navbar-logo
  height 24px
  width 273px

.nav-selected-link-container
  background-color $icanGreen
  transition background-color 0.3s

.site-navbar__menu:hover
  background-color $icanGreen
  transition background-color 0.3s

.site-navbar__menu:hover .nav-link
  color #fff

.site-navbar__menu a .nav-link,
.nav-lang-container a .nav-link
  color #616161
  letter-spacing 1.4px

.nav-selected-link
  color $white !important
  font-weight 700

.nav-separator
  background-color $icanGreen
  height 22px
  margin 0 18px
  width 2px

.site-navbar__menu-trigger,
.site-navbar__mobile-logo-container
  display none

.site-navbar__menu-trigger
  color white // Change

.site-navbar__menu-container
  align-items center
  display flex
  flex-direction row
  height 100%

.site-navbar__menu
  align-items center
  cursor pointer
  display flex
  height 100%
  justify-content flex-end
  padding 0 15px

.site-navbar__menu-link
  align-items center
  color black // Change
  display flex
  height 100%
  font-size remify(13px) // Change
  margin-top 4px

  &:hover, &.active
    color white // Change

.hamburger-menu-icon
  display none

.navbar-hamburguer-visibility
  position absolute

@media screen and (max-width: 876px) // Change
  .site-navbar
    justify-content space-between
    height 56px // Change
    padding 0 18px // Change

  .site-navbar__desktop-logo-container
    img
      height remify(20) // Change
      width auto

  .site-navbar__mobile-logo-container
    display block
    center-block()
    width 70% // Change

    img
      width 100%

  .site-navbar__menu-trigger
    display block
    float right
    font-size 18px // Change

  .site-navbar__menu-container
    background white // Change
    height 100vh
    margin-right 0
    overflow-y auto
    position fixed
    right -280px
    top 0
    transition right 0.2s
    width 280px
    padding-top 25px // Change

  .site-navbar__menu-container--show-menu
    right 0

  .site-navbar__menu
    margin-bottom 30px // Change
    margin-top 30px // Change
    text-align left
    height auto
    flex-wrap wrap

  .site-navbar__menu-link
    display block
    height auto
    display block
    text-align left
    flex-basis 100%

  .hamburger-menu-icon
    cursor pointer
    display block
    height 20px
    width 20px

  .navbar-hamburguer-visibility
    position initial

@media screen and (max-width 786px)
  .nav-transparent-bg
    left 30px
    top 30px
