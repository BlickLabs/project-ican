*
  box-sizing border-box

html
  font-size unit($baseFontSize, 'px')
  min-height 100%
  position relative

  @media screen and (max-width: 768px)
    font-size 14.5px

  @media screen and (max-width: 480px)
    font-size 13px

body
  font-size inherit
  margin-bottom 270px

  &.noscroll
    overflow hidden

    &::after
      content ' '
      opacity 1
      z-index 9

a
  &, &:focus, &:hover, &:active
    text-decoration none
  outline none

#page
  margin 0
  overflow hidden
  padding 0

// LOADERS //
.custom-loader
  display none
  text-align center
  width 100%

  .ball-pulse-sync
    div
      background white

.button-wrapper.disabled,
button[type="submit"][disabled]
  display none

  & + .custom-loader
    &:not(.vertical-center)
      display block

    &.vertical-center
      display flex
      height 100%
// END LOADERS //

// FORMS //
label.error
  color $errorColor
  display block
  padding-top 0.3em

.form-message
  i, span
    display inline-block

  span
    margin-left 0.5em

  &.error
    color $errorColor

  &.success
    color $successColor

  &.success, &.error
    margin-top 1em

input, textarea, button, select
  font-family inherit

  &, &:hover, &:active &:focus
    box-shadow none
    outline none

textarea
  resize none
// END FORMS //

// GENERALS //

.wrapper-space-navbar
  margin-top 79px

.bg-img-base
  background-position center
  background-repeat no-repeat
  background-size cover

.no-margin
  margin 0

.ican-special-title-container
  position relative

.ican-special-title
  color $icanSemiGray
  font-size remify(85px)
  letter-spacing 0.4px

.ican-title-container
  left 80px
  position absolute
  top 60px

.ican-title
  color $icanBlack
  font-size remify(38px)
  letter-spacing 0.1px

.ican-text-decorator
  background-color $icanGreen
  bottom -38px
  height 4px
  left 60px
  position absolute
  width 42px

.ican-paragraph
  color $icanBlack
  font-size remify(16px)
  line-height 31px

.ican-base-btn
  background-color $icanGreen
  border none
  color #fff
  cursor pointer
  font-size remify(12px)
  height 48px
  letter-spacing 0.9px
  padding 0
  text-transform uppercase
  width 170px

.ican-site-link
  color $white
  font-size remify(13px)

  &:hover
    color $icanGreen

.ican-input-base
  background-color $icanGrayForm
  border none
  color $icanBlack
  height 48px
  margin-bottom 37px
  padding 0 22px

  &::placeholder
    color $icanGrayPlaceholder

// END GENERAL //

@import 'partials/navbar'

@import 'partials/footer'
